{
  "name": "littleredbutton/bigbluebutton-api-php",
  "type": "library",
  "description": "BigBlueButton PHP API Library for PHP",
  "keywords": [
    "bigbluebutton",
    "bbb",
    "api"
  ],
  "homepage": "http://bigbluebutton.org/",
  "license": "LGPL-3.0-or-later",
  "authors": [
